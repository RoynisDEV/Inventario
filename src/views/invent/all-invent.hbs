<br>
<div class="row">
    {{#each inventa }}
    <div class="col-md-3">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title d-flex justify-content-between aling-items-center">
                {{nombre}} 
            </h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label> cantidad = {{cantidad}} </label>
            </div>
            <div class="form-group">
                <lavel> peso = {{peso}}</lavel>
            </div>
            <div class="form-group">
                <lavel> costo = ${{costo}}</lavel>
            </div>
            <div class="form-group">
                <lavel> costo Total = ${{costoTotal}}</lavel>
            </div>
            <div class="form-group">
                <lavel> fecha de ingreso = {{date}}</lavel>
            </div>
            <div class="form-group">
               <form action="/inv/dlt/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                     <button class="btn btn-danger btn-sm btn-block" type="submit">
                         Borrar
                         </button>
               </form>
                <div class="form-group">
                    <a href="/inv/edit/{{_id}}" class="btn btn-primary btn-sm btn-block">Editar</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">No hay inventario</p>
            <a href="/inv/add" class="btn btn-success btn-block">Agregar Item</a>
        </div>
    </div>
    {{/each}}
</div>
