<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar</h3>
    
        </div>
        <div class="card-body">
            <form action="/invent/edit-invent/{{inv._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" 
                    value="{{inv.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cantidad" class="form-control" placeholder="Cantidad" 
                    value="{{inv.cantidad}}">
                </div>
                <div class="form-group">
                    <input type="text" name="peso" class="form-control" placeholder="Peso" 
                    value="{{inv.peso}}">
                </div>
                 <div class="form-row">
            <div class="col">
            <select class="form-control" name="costoTotal">
                <option>{{inv.costoTotal}}</option>
                <option>80</option>
                <option>100</option>
                <option>140</option>
                <option>160</option>
                <option>180</option>
                <option>200</option>
                <option>240</option>
            </select>
            </div>
            <div class="col">
                <select class="form-control" name="descripcion">
                <option>{{inv.descripcion}}</option>
                <option>Lb</option>
                <option>Kg</option>
                <option>U</option>
            </select>
            </div>
        </div>
        <br>
                <div class="form-group">
                    <input type="text" name="costo" class="form-control" placeholder="Costo" 
                    value="{{inv.costo}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                    
                </div>
            </form>
        </div>
    </div>
</div>