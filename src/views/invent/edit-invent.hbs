<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar</h3>
    
        </div>
        <div class="card-body">
            <form action="/invent/edit-invent/{{inv._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" 
                    value="{{inv.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cantidad" class="form-control" placeholder="Cantidad" 
                    value="{{inv.cantidad}}">
                </div>
                <div class="form-group">
                    <input type="text" name="peso" class="form-control" placeholder="Peso" 
                    value="{{inv.peso}}">
                </div>
                <div class="form-group">
                    <input type="text" name="costo" class="form-control" placeholder="Costo" 
                    value="{{inv.costo}}">
                </div>
                <div class="form-group">
                    <input type="text" name="costoTotal" class="form-control" placeholder="Costo Total" 
                    value="{{inv.costoTotal}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                    
                </div>
            </form>
        </div>
    </div>
</div>